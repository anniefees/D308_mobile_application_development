<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permissions for notifications and alarms -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.USE_EXACT_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TripTracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- BroadcastReceiver for handling alarms -->
        <receiver android:name=".util.AlertReceiver"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".ui.event.EventDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.event.EventListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.trip.TripDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.trip.TripListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>